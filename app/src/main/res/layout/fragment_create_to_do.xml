<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Fragments.CreateToDoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTitle"
            android:hint="Title"
            android:background="@drawable/edit_txt_shape"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:textColorHint="#E1EBE0CA"
            android:textColor="#E1EBE0CA"
            android:maxLines="1">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editSubTitle"
            android:hint="SubTitle..."
            android:background="@drawable/edit_txt_shape"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:textColorHint="#E1EBE0CA"
            android:textColor="#E1EBE0CA"
            android:maxLines="1">
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/pGreen"

                android:background="@drawable/green_dot" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/pYellow"
                android:layout_marginStart="20dp"
                android:background="@drawable/yellow_dot" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/pRed"
                android:layout_marginStart="20dp"
                android:background="@drawable/red_dot" />


        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/editDescription"
            android:hint="Description"
            android:background="@drawable/edit_txt_shape"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:fontFamily="@font/regular"
            android:textColorHint="#E1EBE0CA"
            android:textColor="#E1EBE0CA">
        </EditText>

    </LinearLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSaveToDo"
        android:layout_gravity="bottom|right"
        android:layout_margin="26dp"
        android:backgroundTint="@color/foreground_color"
        android:src="@drawable/done"
        />

</FrameLayout>