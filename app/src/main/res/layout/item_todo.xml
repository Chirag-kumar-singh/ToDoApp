<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#74282525">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/viewPriority"
            android:background="@drawable/red_dot"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/todoTitle"
                android:text="@string/app_name"
                android:fontFamily="@font/bold"
                android:textColor="#E0EFDDBF"
                android:textSize="17sp"
                android:maxLines="1">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/todoSubtitle"
                android:text="Hello my name is chirag , i want to be an android developer."
                android:fontFamily="@font/regular"
                android:textColor="#E1EBE0CA"
                android:textSize="14sp"
                android:layout_marginTop="5dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/todoDate"
                android:text="29 July 2024"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold"
                android:textColor="#E1EBE0CA"
                android:textSize="16sp"
                android:maxLines="1">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>